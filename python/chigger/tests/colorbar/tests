[Tests]
  issues = '#8661'
  design = 'chigger/index.md'
  [./standalone]
    type = ImageDiff
    command = colorbar.py
    imagediff = 'colorbar.png'
    requirement = "Chigger shall include a colorbar object that can be oriented vertically."
  [../]

  [./standalone_horiz]
    type = ImageDiff
    command = colorbar_horiz.py
